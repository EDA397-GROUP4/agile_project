<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/bgcolor" >
	
	    <TextView android:id="@+id/TextViewStoriesInstruction"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="@string/stories_select" />
    
	    <LinearLayout
	    android:id="@+id/LayoutStoryInfo"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical" >
	    
		    <TextView
		        android:id="@+id/TextViewStoriesMessage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/stories_loading"
		        android:textColor="#707070"
		        android:textSize="12sp" />
		    
		    <ProgressBar
		        android:id="@+id/ProgressBarStory"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@android:style/Widget.ProgressBar.Small"
		        android:layout_marginRight="5dp" />
	    
	    </LinearLayout>
    
	    <ListView android:id="@+id/listview_story"
			android:layout_height="0dip"
	        android:layout_width="match_parent"
	        android:layout_weight="1" />
    
	    <View
		android:layout_width="1dp"
		android:layout_height="60dp">
		</View>


</LinearLayout>