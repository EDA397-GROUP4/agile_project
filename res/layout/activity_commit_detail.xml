<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical" 
	android:background="@color/bgcolor">

	<ScrollView android:layout_height="0dip"
		android:layout_width="match_parent" 
		android:layout_weight="1">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:orientation="vertical">

			<TextView android:id="@+id/textViewCommitDetails"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/commit_details_loading" />

			<TextView android:id="@+id/textViewLoadingFiles"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" />

			<TextView android:id="@+id/textViewCommittedFileList"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" />



		</LinearLayout>

	</ScrollView>
	
	<View android:layout_width="1dp" 
	    android:layout_height="60dp">
	</View>

</LinearLayout>